Please comment on: <%=@link.title%>
<%= form_for @comment do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id  %>
  <%= f.hidden_field :link_id, value: @link.id  %>
  <p class="text_area">
    <%= f.label :body, "Comment	"  %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<%end%>